
<section class="login">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-lg-7 text-center">
        <div class="login-box">
            <h2 class="head">Log in</h2>
            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
              <div class="form-group">
                  <%= f.email_field :email, class: "form-control", placeholder: "Enter Email Address" %>
              </div>
              <div class="form-group">
                <%= f.password_field :password, class: "form-control" , placeholder: "Password" %>
              </div>
              <div class="form-check">
                <% if devise_mapping.rememberable? -%>
                  <label class="form-check-label">
                    <%= f.check_box :remember_me, class: "form-check-input" %>
                    Remember Me
                  </label>
                <% end -%>
                <%= link_to "Forgot your password?", new_password_path(resource_name), class: "float-right" %><br />
              </div>
              <%= f.submit "Log in" , class: "btn btnSubmit" %>
            <% end %>
            <span>Don't have an account? <%= link_to "Sign up", new_registration_path(resource_name) %></span>
        </div>
      </div>
    </div>
  </div>
</section>


